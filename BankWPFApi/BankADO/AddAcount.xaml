<Window x:Class="BankADO.AddAcount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankADO"
        mc:Ignorable="d"
        Title="Добавление счета" Height="220" Width="250" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <TextBlock Text="Сумма:" Margin="5"/>
            <TextBox x:Name="AmountBox" Margin="5" Width="120" HorizontalAlignment="Left"/>
            <TextBlock Text="Процент:" Margin="5"/>
            <TextBox x:Name="PercentBox" Margin="5" Width="120" HorizontalAlignment="Left"/>
            <CheckBox x:Name="CapCheck" Content="С капитализацией" Margin="5" Visibility="Visible"/>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="okBtn" Content="OK" Margin="5" Height="25" Width="50"/>
                <Button x:Name="cancelBtn" Content="Отмена" Margin="5" Height="25" Width="100"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
