@model ASP_Bank.Auth.UserLogin

@{
    Layout = "_Layout";
}

<div>
        <p>Вход</p>

        <form asp-action="Login" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly"></div>

            <input type="hidden" asp-for="ReturnUrl" />

                <p>
                    <input asp-for="LoginProp" placeholder="Логин" style="width:200px"/>
                </p>

                <p>
                    <input asp-for="Password" placeholder="Пароль" style="width:200px"/>
                </p>

            <p>
                <button type="submit" class="acc_button" style="width:200px">Войти</button>
            </p>
        </form>
</div>


